model Appointment {
  id        Int               @id @default(autoincrement())
  treatment String
  startAt   DateTime
  endAt     DateTime
  createdAt DateTime          @default(now())
  status    AppointmentStatus @default(REGISTERED)
  patient   Patient           @relation(fields: [patientId], references: [id])
  patientId Int
  dentist   Dentist           @relation(fields: [dentistId], references: [id])
  dentistId Int
  clinic    Clinic            @relation(fields: [clinicId], references: [id])
  clinicId  Int
}

enum AppointmentStatus {
  REGISTERED
  CONFIRMED
  CANCELED
}

model Treatment {
  id          Int               @id @default(autoincrement())
  name        String
  description String
  category    TreatmentCategory
  // patientTeeth Tooth[]
}

enum ActionType {
  DIAGNOSTIC
  PROCEDURE
}

enum TreatmentCategory {
  PREVENTIVE
  DIAGNOSTIC
  ENDODONTICS
  PERIODONTICS
  PROSTHETICS
  OTHER
}

enum Role {
  ADMIN
  DENTIST
  ASSISTANT
  REGULAR
}

enum TreatmentStatus {
  EXISTING
  COMPLETED
  PLANNED
}

enum ToothSurface {
  buccal
  lingual
  distal
  mesial
  occlusial
  root
  crown
}
